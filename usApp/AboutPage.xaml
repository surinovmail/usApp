<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="usApp.AboutPage"
             Title="Ilova haqida"
             x:Name="aboutname"
             
             >
    
    <VerticalStackLayout Padding="10" Spacing="20">

        <Entry Placeholder="E mail ni kiriting" PlaceholderColor="CadetBlue" Keyboard="Email"/>
        <Entry Placeholder="Parol bilan tasdiqlang" IsPassword="True" PlaceholderColor="CadetBlue" Keyboard="Default"/>
